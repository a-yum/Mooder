@model MoodFrequencyViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="card my-4 text-center">
        <div class="card-body">
            <h2 class="card-title">Welcome to Mooder!</h2>
            <p class="card-text">Track and analyze your moods easily. Create a new entry to get started.</p>
            <a href="@Url.Action("Create", "Mood")" class="btn btn-primary">Create New Entry</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center">Last Month's Moods</h3>
                    <div class="chart-container">
                        <canvas id="moodChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center">Number of Monthly Entries</h3>
                    <div class="chart-container">
                        <canvas id="monthlyEntriesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
<script>
    var moodData = {
        moods: @Html.Raw(Json.Serialize(Model.Moods)),
        moodCounts: @Html.Raw(Json.Serialize(Model.MoodCounts)),
        months: @Html.Raw(Json.Serialize(Model.Months)),
        monthlyEntryCounts: @Html.Raw(Json.Serialize(Model.MonthlyEntryCounts))
    };
</script>
<script src="~/js/charts.js"></script>